@import "nib"
normalize-css()
@import "iconfont"
@import "rslides"
@import "animate"

body
    background #F3F3F3
    background url(../img/pattern/p10-1.png)
    font-family 'Open Sans',sans-serif
    font-size 16px

.Header
    background-color #f9f9f9
    box-shadow 0px 4px 9px -4px rgba(0,0,0,0.26)
    left 0
    position fixed
    right 0
    text-align center
    top 0
    user-select none
    z-index 10

.Header-name, .Header-description, .MainMenu, .MainMenu-item
    display inline-block
    vertical-align middle

.Header-name
    color #10CAF7
    font-family 'Oswald', sans-serif
    font-size 2.5rem
    font-weight 700
    line-height 2.5rem

.Header-description
    border-left 1px solid #10CAF7
    color #10CAF7
    font-family 'Oswald', sans-serif
    font-size 1.2rem
    font-style italic
    font-weight 400
    margin 0 5rem 0 .2rem
    padding 0 0 0 10px

.MainMenu-list
    font-size 0
    margin 0
    padding 0

.MainMenu-item
    list-style none
    margin 0
    padding 0

.MainMenu-link
    border-top 4px solid #f9f9f9
    color #10CAF7
    display block
    font-size 1.3rem
    font-weight 300
    outline 0
    padding 1.3rem 1rem
    text-decoration none
    transition all .1s
    span
        color #d3d3d3
        margin-right .8rem
    &:hover
        background #10CAF7
        border-top 4px solid #10CAF7
        color white
    &:hover span
        color white

.MainMenu-link--selected
    border-top 4px solid #10CAF7

.MainContent
    background #f9f9f9
    background url(../img/pattern/p17.png)
    box-shadow 0px 0px 5px 1px rgba(0,0,0,0.26)
    box-sizing border-box
    height auto
    margin-bottom 1.5rem
    margin-left auto
    margin-right auto
    margin-top 5.4rem
    max-width 1000px
    padding 1.8rem

.MainContent-title
    background #10caf7
    border-radius 6px 6px 0 0
    box-shadow 0px 4px 9px -4px rgba(0,0,0,0.40)
    color white
    font-size 1.8rem
    font-weight 300
    left -49px
    margin 0 0 0.9rem 0
    padding .3rem 0
    position relative
    text-align center
    width 1041px
    &:before, &:after
        border-left 20px solid transparent
        border-right 20px solid transparent
        border-top 20px solid #29cff8
        content ''
        height 0
        position absolute
        top 100%
        width 0
        z-index -1
    &:before
        left 0
    &:after
        right 0
    span
        font-size 1.5rem
        margin-right .8rem
        
.MainContent-img
    margin 0
    padding 0
    width 100%
    img
        display block
        width 100%

.MainContent-article
    color #575757
    margin 1rem 0 3rem 0
    > p
        padding 0 1.5rem
        text-align justify

.MainContent-div
    text-align center
    img
        display inline-block
        vertical-align middle
        width 15%
    p
        display inline-block
        margin 0 0 0 2%
        text-align justify
        vertical-align middle
        width 80%

.MainContent-articleTitle
    background #10CAF7
    border-radius 6px 6px 0 0
    box-shadow 0px 4px 9px -4px rgba(0,0,0,0.50)
    color white
    font-weight 700
    left -49px
    margin 1rem 0
    padding 0.2rem 0
    position relative
    text-align center
    width 1041px
    &:before, &:after
        border-left 20px solid transparent
        border-right 20px solid transparent
        border-top 20px solid #29cff8
        content ''
        height 0
        position absolute
        top 100%
        width 0
        z-index -1
    &:before
        left 0
    &:after
        right 0
            
.MainContent-articleImg
    margin 0 auto
    width 510px
    img
        display block
        width 100%

.MainContent-articleList
    list-style disc url(../img/list-blue.png)
    margin 0 1rem

.MainContent-articleItem
    margin 0.5rem 0

.Team-article
    font-size 0
    margin 3rem 0 4rem 0

.Team-img
    display inline-block
    margin 0
    min-width 27%
    text-align center
    img
        border-radius 50%
        height 200px
        width 200px

.Team-Description
    color #575757
    display inline-block
    font-size 1rem
    margin 0 0.6rem
    max-width 70%
    text-align justify
    vertical-align top
    p
        font-weight 300
        padding 0 1rem

.Team-profileTitle
    background #10CAF7
    color white
    font-size 1.05rem
    font-weight 700
    margin-top 0
    text-align center

.Team-contact
    list-style none
    margin 0
    padding 0 1rem
    text-align justify
    li
        color #10CAF7
        font-size 1.2rem
        padding .3rem 0
    span
        color gray
        font-family 'Open Sans', sans-serif
        font-size 1rem
        font-weight 400
        margin 0 1rem

.Service-slider
    margin 1rem 0
    position relative
    *
        margin 0
        padding 0
    a
        color #222

.caption
    background rgba(0, 0, 0, 0.3)
    bottom 0
    left 0
    position absolute
    right 0
    p
        color white
        font-size 1rem
        font-weight 700
        padding 2rem
        text-align center

.pafmi
    color #10CAF7
.fsize
    font-size 1.4rem

.large-btns_nav
    -webkit-tap-highlight-color rgba(0,0,0,0)
    background transparent url("../img/themes.gif") no-repeat left 50%
    bottom 0
    left 0
    opacity 0.4
    overflow hidden
    position absolute
    text-indent -9999px
    top 0
    width 38px
    z-index 5
    &:active
        opacity 0.6
    &.next
        background-position right 50%
        left auto
        right 0
    &:focus
        outline none

.large-btns_tabs
    margin-top 10px
    text-align center
    li
        *float left
        _float left
        display inline
        float none
        margin-right 5px
    a
        *display block
        _display block
        background #ccc
        background rgba(0,0,0, .2)
        border-radius 15px
        box-shadow inset 0 0 2px 0 rgba(0,0,0,.3)
        display inline-block
        height 9px
        overflow hidden
        text-indent -9999px
        width 9px

.large-btns_here
    a
        background #222
        background rgba(0,0,0, .2)

.Service-article
    margin 2.5rem 0

.Service-articleTitle
    color #10CAF7
    font-family 'Oswald', sans-serif
    font-size 1.6rem
    font-weight 400
    margin 0.5rem 0 1rem 0
    padding .4rem 0
    text-align left
    span
        color #10CAF7
        font-size 1.4rem
        margin-right .7rem

.Service-articleSubTitle
    background #efefef
    border-radius 10px
    color gray
    font-weight 700
    padding .5rem 1rem
    text-align justify
    
.Service-link
    color #10CAF7
    font-weight 700
    margin-left 1rem
    text-decoration none
    &:hover
        color #00abec
    span
        font-size 1.1rem
        margin-right .5rem

.Service-Description
    color #575757
    font-weight 400
    padding 0 1.5rem
    text-align justify

.Contact-form
    margin 1.5rem 0
    overflow hidden
    padding 0
    position relative

#form-main
    float left
    padding-top 0px
    width 100%

#form-div
    background url(../img/pattern/p3.png)
    border-radius 7px
    float left
    left 50%
    margin-left -260px
    margin-top 30px
    padding-bottom 50px
    padding-left 35px
    padding-right 35px
    padding-top 35px
    position relative
    width 450px

.feedback-input
    background-color #fbfbfb
    border-radius 0
    border 3px solid rgba(0,0,0,0)
    box-sizing border-box
    color #3c3c3c
    font-family Helvetica, Arial, sans-serif
    font-size 18px
    font-weight 500
    line-height 22px
    margin-bottom 10px
    padding 13px 13px 13px 54px
    width 100%
    &:focus
        background #fff
        border 3px solid #10CAF7
        box-shadow 0
        color black
        outline none
        padding 13px 13px 13px 54px

#form-name
    background-image url(../img/name.svg)
    background-position 11px 8px
    background-repeat no-repeat
    background-size 30px 30px

#form-email
    background-image url(../img/email.svg)
    background-position 11px 8px
    background-repeat no-repeat
    background-size 30px 30px

#form-comment
    background-image url(../img/comment.svg)
    background-position 11px 8px
    background-repeat no-repeat
    background-size 30px 30px

textarea
    height 150px
    line-height 150%
    resize vertical
    width 100%

input:hover, textarea:hover,
input:focus, textarea:focus
    background-color white

input
    &:invalid
        &:focus
            border-color white

#button-blue
    background-color #10CAF7
    border none
    color white
    cursor pointer
    float left
    font-family 'Oswald', sans-serif
    font-size 24px
    font-weight 700
    margin-top -4px
    padding-bottom 22px
    padding-top 22px
    transition all 0.3s
    width 100%
    &:hover
        background-color white
        color #10CAF7

@media only screen and (max-width: 580px)
    #form-div
        left 3%
        margin-left 0
        margin-right 3%
        padding-left 3%
        padding-right 3%
        width 88%

.SocialAside
    bottom 0
    height 216px
    left 0
    margin auto
    position fixed
    text-align center
    top 0
    z-index 8

.SocialAside-list
    list-style none
    margin 0
    padding 0

.SocialAside-item
    background #10CAF7
    margin 0
    padding 0
    transition width 0.3s
    width 50px
    &:hover
        width 75px

.SocialAside-link
    color white
    font-size 2rem
    line-height 1.7
    outline 0
    text-decoration none

.Footer
    background url(../img/pattern/p11.png)
    box-shadow 0px -4px 6px -3px rgba(0,0,0,0.26)
    padding 0
    position relative
    text-align center

.Footer-div
    border-radius 10px
    color #d3d3d3
    display inline-block
    margin 0 1rem
    max-width 250px
    padding .8rem
    vertical-align middle

.Footer-Title
    font-family 'Oswald', sans-serif
    font-size 2.5rem
    font-weight 700
    margin 0

.Footer-list
    list-style none
    margin 0
    padding 0
    text-align left
    li
        margin .5rem 0
    p
        display inline-block
        margin 0
        padding 0
        text-align left
        vertical-align middle
        width 190px
    span
        display inline-block
        font-size 1.5rem
        margin 0 1rem
        padding 0
        vertical-align middle

.Social-Title
    font-size 1rem
    font-weight 400
    margin 0

.Social-list
    list-style none
    margin .5rem 0 0 0
    padding 0
    li
        display inline
        margin 0 .5rem
        a
            color #d3d3d3
            font-size 1.5rem
            outline 0
            text-decoration none

.Dev-text
    font-size .9rem
    font-weight 300
    margin 0
    padding .5rem
    a
        color cyan
        outline 0
        text-decoration none

.Footer-img
    display block
    width 100px

@media only screen and (max-width: 1120px)
    .Header-name
        font-size 2.2rem
    .Header-description
        font-size 1rem
        margin 0 1rem 0 .2rem
    .MainMenu-link
        font-size 1.3rem
        padding .4rem 1rem
    .MainContent-title, .MainContent-articleTitle
        border-radius 0
        box-shadow none
        position static
        width 100%
        &:before, &:after
            content none
    .SocialAside
        display none
    .Footer-div
        margin-top 1rem

@media only screen and (max-width: 1010px)
    .Header
        position static
    .MainMenu
        display block
        position static
    .MainMenu-link
        border-top none
        border-bottom 4px solid #f9f9f9
        &:hover
            border-top none
            border-bottom 4px solid #10CAF7
            
    .MainMenu-link--selected
        border-top none
        border-bottom 4px solid #10CAF7
    .MainContent
        margin-top 3.5rem
    #button-blue
        padding-bottom 10px
        padding-top 10px
    .ease
        height 54px
        width 0px

@media only screen and (max-width: 820px)
    .MainContent
        background url(../img/pattern/p16.png)
        padding .5rem
    .MainContent-div
        img
            display block
            width 150px
            margin 0 auto
        p
            display block
            width auto
            margin 1rem 0
            padding 0 1.5rem
    .MainContent-articleImg
        width 80%
    .Team-img
        display block
        width auto
    .Team-Description
        display block
        max-width 100%
    .Team-profileTitle
        margin-top 2rem
    .Service-articleTitle
        font-size 1.3rem
        span
            font-size 1.3rem
    .Service-articleSubTitle
        border-radius 0px
    .Service-Description
        padding .5rem
    .Service-article
        ul
            padding 0 2rem   
    .Footer-publi
        display none
            
@media only screen and (max-width: 520px)
    .MainMenu-item
        display block
    .MainMenu-link
        border 0
        &:hover
            border 0
    .MainMenu-link--selected
        border 0
    .MainContent
        margin-top 1.5rem
    .MainContent-article
        p
            font-weight 300
    .MainContent-articleItem
        font-weight 300
    .caption
        display none
    .Service-Description
        font-weight 300
        text-align left

